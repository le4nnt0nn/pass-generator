<Window x:Class="PassGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <!--title-->
        <TextBlock Text="Generador de Contraseñas" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <!--long-->
        <TextBlock Text="Longitud de la contraseña:" VerticalAlignment="Top" Margin="10,50,0,0" HorizontalAlignment="Left"/>
        <Slider x:Name="sliderLongitud" Minimum="4" Maximum="64" Value="8" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,50,0,0" Width="200"/>
        <TextBlock x:Name="txtLongitud" Text="8" VerticalAlignment="Top" Margin="420,50,0,0" HorizontalAlignment="Left"/>
    </Grid>
</Window>
